    labels.push('Other');
    data.push(otherValue);
  }
  
  // Create the chart
  new Chart(browser, {
    type: 'bar',
    data: {
      labels: labels,
      datasets: [{
        label: 'Aantal keer bezocht',
        data: data,
        backgroundColor: colourTheme,
